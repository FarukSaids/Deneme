<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".MainkayitOl">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_account_circle_24" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/yeni3"
        android:text="Giris Bilgilerinizi Oluşturunuz "
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/kayitkullaniciAdi"
        app:layout_constraintStart_toStartOf="@+id/kayitkullaniciAdi"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
    <Button
        android:id="@+id/butongirisedon"
        android:layout_width="122dp"
        android:layout_height="0dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/buttonarkaplan"
        android:fontFamily="@font/yeni3"
        android:text="Girişe Dön"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonkaydet" />
    <EditText
        android:id="@+id/kayitkullaniciAdi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittextarkaplan"
        android:drawableLeft="@drawable/accountkucuk"
        android:ems="10"
        android:fontFamily="@font/yeni3"
        android:hint="Kullanıcı Adınızı Oluşturun"
        android:inputType="textPersonName"
        android:padding="9dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/kayitparola"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <EditText
        android:id="@+id/kayitparola"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/edittextarkaplan"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawingCacheQuality="high"
        android:ems="10"
        android:fontFamily="@font/yeni3"
        android:hint="Parolanızı Oluşturunuz"
        android:inputType="textPersonName"
        android:padding="9dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/butonkaydet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kayitkullaniciAdi"
        tools:visibility="visible" />
    <Button
        android:id="@+id/butonkaydet"
        android:layout_width="122dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/buttonarkaplan"
        android:fontFamily="@font/yeni3"
        android:text="Kayıt Ol"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/butongirisedon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kayitparola" />

</androidx.constraintlayout.widget.ConstraintLayout>