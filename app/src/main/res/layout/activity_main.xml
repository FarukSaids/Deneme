<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="43dp"


        android:layout_marginBottom="19dp"
        android:fontFamily="@font/yeni3"
        android:text="İyi günler "
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/giriskullaniciAdi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/giriskullaniciAdi"
        android:layout_width="280dp"
        android:layout_height="40dp"

        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittextarkaplan"
        android:drawableLeft="@drawable/accountkucuk"
        android:ems="10"
        android:fontFamily="@font/yeni"

        android:hint="Kullanıcı Adı"
        android:inputType="textPersonName"
        android:padding="9dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/girisparola"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/girisparola"
        android:layout_width="280dp"
        android:layout_height="40dp"

        android:layout_marginStart="5dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/edittextarkaplan"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:ems="10"
        android:fontFamily="@font/yeni3"
        android:hint="Parola"
        android:inputType="textPersonName"
        android:padding="9dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/butongirisyap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giriskullaniciAdi" />

    <Button
        android:id="@+id/butongirisyap"
        android:layout_width="173dp"
        android:layout_height="35dp"

        android:layout_marginBottom="14dp"


        android:background="@drawable/buttonarkaplan"
        android:fontFamily="@font/yeni3"
        android:text="Giriş Yap"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/butonkayitol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisparola" />

    <Button
        android:id="@+id/butonkayitol"
        android:layout_width="173dp"
        android:layout_height="35dp"
        android:layout_marginBottom="165dp"
        android:background="@drawable/buttonarkaplan"
        android:fontFamily="@font/yeni3"
        android:text="Kayıt Ol"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butongirisyap" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/baseline_account_circle_24"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yeniacc" />

</androidx.constraintlayout.widget.ConstraintLayout>